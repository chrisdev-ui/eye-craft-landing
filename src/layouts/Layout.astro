---
import SEO from "@/components/SEO.astro"

interface Props {
	title: string
	description: string
	preloadImgLCP?: string
}

const { title, description, preloadImgLCP } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<SEO title={title} description={description} preloadImgLCP={preloadImgLCP} />
	</head>

	<body>
		<slot />
		<style is:global>
			:root {
				--color-primary: #fca311;
				--color-secondary: #14213d;
				--color-secondary-accent: #192a4d;
				--color-tertiary: #e5e5e5;
				--color-accent: #0070f3;

				--color-background: #ffffff;
				--color-text: #000000;

				/* Texts */
				--topper-font-size: clamp(0.8125rem, 1.6vw, 1rem);
				--header-font-size: clamp(1.9375rem, 3.9vw, 3.0625rem);
				--body-font-size: 1rem;
			}

			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}

			html {
				font-family:
					"Hind Madurai",
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue";
				background: var(--color-background);
				color: var(--color-text);
				overflow-x: hidden;
				overscroll-behavior: none;
			}

			body {
				margin: 0;
				padding: 0;
				font-size: var(--body-font-size);
			}

			main {
				position: relative;
			}

			.sr-only:not(:focus):not(:active) {
				clip: rect(0 0 0 0);
				clip-path: inset(50%);
				height: 1px;
				overflow: hidden;
				position: absolute;
				white-space: nowrap;
				width: 1px;
			}

			::-webkit-scrollbar {
				width: 10px;
				border-radius: 10px;
			}

			::-webkit-scrollbar-thumb {
				border-radius: 10px;
				background-color: theme("colors.primary");
				border: 2px solid transparent;
				background-clip: content-box;
			}

			::-webkit-scrollbar-thumb:active {
				background-color: #666;
			}

			::-webkit-scrollbar-track {
				background: var(--background-image);
			}

			::-webkit-scrollbar-corner {
				background: var(--background-image);
			}

			@media (prefers-color-scheme: dark) {
				:root {
					--color-background: #000000;
					--color-text: #ffffff;
				}
			}
		</style>
	</body>
</html>
